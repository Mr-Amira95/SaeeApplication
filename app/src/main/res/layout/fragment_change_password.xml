<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/change_password"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/the_password_must_contain_one_uppercase_character_one_lowercase_character_and_must_be_a_minimum_length_of_8_characters"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_feild"
        android:hint="@string/current_password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/sub_title"
        android:gravity="left|center_vertical"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/visible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintBottom_toBottomOf="@+id/current_password"
        app:layout_constraintRight_toRightOf="@+id/current_password"
        app:layout_constraintTop_toTopOf="@+id/current_password" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_feild"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/current_password"
        android:gravity="left|center_vertical" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/new_visible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintBottom_toBottomOf="@+id/new_password"
        app:layout_constraintRight_toRightOf="@+id/confirm_new_password"
        app:layout_constraintTop_toTopOf="@+id/new_password" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_feild"
        android:hint="@string/confirm_new_password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/new_password"
        android:gravity="left|center_vertical" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/confirm_new_visible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_visibility_off"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_new_password"
        app:layout_constraintRight_toRightOf="@+id/confirm_new_password"
        app:layout_constraintTop_toTopOf="@+id/confirm_new_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/background_button"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_password" />
</androidx.constraintlayout.widget.ConstraintLayout>
